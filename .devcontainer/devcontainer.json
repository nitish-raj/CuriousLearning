{
	"name": "Docker in Docker",
	"build": {
		"dockerfile": ".gitpod.dockerfile",
		"context": ".."
	},
	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {},
		"ghcr.io/devcontainers-contrib/features/curl-apt-get:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-toolsai.jupyter",
				"ms-python.autopep8",
				"ms-azuretools.vscode-docker",
				"mhutchie.git-graph",
				"amazonwebservices.amazon-q-vscode",
				"eamodio.gitlens",
				"vivaxy.vscode-conventional-commits",
				"donjayamanne.githistory",
				"GitHub.vscode-pull-request-github",
				"ms-kubernetes-tools.vscode-kubernetes-tools",
				"ms-python.debugpy",
				"ms-python.python","ms-python.vscode-pylance",
				"amazonwebservices.aws-toolkit-vscode"
			],
			"settings": {
				"terminal.integrated.shell.linux": "/bin/bash"
			}
		}
	},
	"mounts": [
		"source=${localWorkspaceFolder}/.git,target=/workspace/.git,type=bind,consistency=cached"
	],
	"containerUser": "gitpod",
	"remoteUser": "gitpod",
	"postCreateCommand": "git config --global credential.helper store && git config --global core.autocrlf input",
	"runArgs": ["--restart", "always"]
}
